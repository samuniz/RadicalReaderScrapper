<h1>Favorites</h1>

<div class="row">
  {{#each article}}
  <div class="col m6">
    <div class="card">
      <div class="card-image">
        <img src="{{image}}">
        <a data-id="{{_id}}" class="deleteFavorites btn-floating halfway-fab waves-effect waves-light red"><i
            class="material-icons">delete</i></a>
      </div>
      <div class="card-content">
        <span class="card-title">{{title}}</span>
        <p>{{body}}</p>
      </div>
      <div class="card-action" id="favoritesCard">
        <a class="waves-effect waves-light btn link modal-trigger" id="addComment" href="#comments-modal-{{_id}}" data-id="{{_id}}">Add
          a Comment</a>
      </div>
      <!-- Add Comment Modal--> 
      <div  class="modal" id="comments-modal-{{_id}}" >
        <div class="modal-content">
          <div class="row">
            <div class="input-field">
              <input placeholder="Name" type="text" class="validate" id="name-{{id}}">
              <label for="first_name">Name</label>
            </div>
          </div>
          <div class="row">
            <div class="input-field">
              <input placeholder="Comment" type="text" class="textarea" id="text-{{id}}">
              <label for="text">Comment</label>
            </div>
          </div>
          <div class="row">
            <a class="saveComment modal-close waves-effect btn-flat" type="submit" data-id="{{_id}}">Save</a>
            <a class="modal-close waves-effect btn-flat">Close</a>
          </div>
          <hr>
          <div class="row">
            <div class="notes" data-id={{_id}}>
              {{#note}}
              <a data-id="{{_id}}" class="deleteNote btn-floating halfway-fab waves-effect waves-light red"><i class="material-icons">delete</i></a>
              <small>{{name}} says: </small>
              <p>{{text}}</p>
              {{/note}}
            </div>
          </div>
        </div>
      </div>
      <div class="card-action" id="readMore">
        <a class="link" href="{{link}}">Read More</a>
      </div>
    </div>
  </div>
  {{/each}}
</div>