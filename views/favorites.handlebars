<h1>Favorites</h1>

<div class="row">
  {{#each article}}
  <div class="col m6">
    <div class="card">
      <div class="card-image">
        <img src="{{image}}">
        <a data-id="{{_id}}" class="addFavorites btn-floating halfway-fab waves-effect waves-light red"><i
            class="material-icons">delete</i></a>
      </div>
      <div class="card-content">
        <span class="card-title">{{title}}</span>
        <p>{{body}}</p>
      </div>
      <div class="card-action">
        <a class= "link modal-trigger" href="#comment" data-id="{{_id}}">Comment</a>
      </div>
    </div>
  </div>
  <!-- Modal Structure -->
<div id="comment" class="modal" data-id="{{_id}}">
  <div class="modal-content">
     <div class="row">
       
       <div class="input-field">
          <input placeholder="Name" type="text" class="validate" id="name-{{id}}">
          <label for="first_name">Name</label>
      </div>
      </div>
      <div class="row">
    <div class="input-field">
      <input placeholder="Comment" type="text" class="textarea" id="text-{{id}}">
      <label for="text">Comment</label>
    </div>
    </div>
    <div class="modal-footer">
      <a class="saveComment modal-close waves-effect btn-flat" type="submit" data-id="{{_id}}" >Save</a>
      <a class="saveComment modal-close waves-effect btn-flat">Close</a>
    </div>
  </div>
 </div>

  {{/each}}
</div>


 