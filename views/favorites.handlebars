 <h1>Favorites</h1>

 <div class="row">
  {{#each article}}
  <div class="col m6">
    <div class="card">
      <div class="card-image">
        <img src="{{image}}">
        <a data-id="{{_id}}" class="addFavorites btn-floating halfway-fab waves-effect waves-light red" ><i class="material-icons">delete</i></a>
      </div>
      <div class="card-content">
        <span class="card-title">{{title}}</span>
        <p>{{body}}</p>
      </div>
      <div class="card-action">
        <a class="link" data-id="{{_id}}">Comment</a>
      </div>
    </div>
  </div>
  {{/each}}
</div>
