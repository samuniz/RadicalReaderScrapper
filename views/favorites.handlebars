<h1>Favorites</h1>
<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="form-group">
          <label for="exampleFormControlTextarea1">Example textarea</label>
          <textarea class="form-control" class="modalNote" rows="3"></textarea>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" class="saveNote">Save changes</button>
      </div>
    </div>
  </div>
</div>
<ul>
 
  {{#each article}}
   <h2>{{this.title}}</h2>
   <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal" class="note" data-id="{{this._id}}">
     	 Add Note
    </button>
   	
    <button class="remove" data-id="{{this._id}}">
		 Remove
	  </button>
  {{/each}}
</ul>

